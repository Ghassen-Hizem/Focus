{
    "manifest_version": 2,
    "name": "Focus",
    "version": "1.0",

    "author" : "Ghassen Hizem",

    "description" : "This is a testing extension made by me , it will allow me to focus on the task at hand without getting distracted by social media and all other distraction that the internet provides ",

    "browser_action": {
      "default_popup": "index.html"
    },
    
    "icons": {
        "48": "icon48.png",
        "96": "icon96.png"
      },
 
    "content_scripts": [
        {
            "matches": ["*://*.facebook.com/*","*://*.instagram.com/*","*://*.linkedin.com/*"],
            "js": ["blocking.js"]
        }
    ],

    "permissions": [
      "storage"
  ],
  

    "background": {
        "scripts": ["background.js"],
        "persistent" : true,
        "type": "module"
      }
      
}